{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@models/*": ["models/*"],
      "@repositories/*": ["repositories/*"],
      "@request-validators/*": ["request-validators/*"],
      "@schemas/*": ["schemas/*"],
      "@enums/*": ["enums/*"],
      "@dtos/*": ["dtos/*"],
      "@interfaces/*": ["types/*"],
      "@helpers/*" : ["helpers/*"],
      "@events/*" : ["events/*"],
      "@middlewares/*": ["middlewares/*"],
      "@config/*": ["config/*"],
      "@email-service/*": ["services/email/*"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  
    "strict": true,
    "skipLibCheck": true
  }
}