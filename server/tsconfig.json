{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@enums/*": ["shared/enums/*"],
      "@dtos/*": ["shared/dtos/*"],
      "@interfaces/*": ["shared/types/*"],
      "@utils/*" : ["shared/utils/*"],
      "@middlewares/*": ["shared/middlewares/*"],
      "@config/*": ["config/*"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  
    "strict": true,
    "skipLibCheck": true
  }
}